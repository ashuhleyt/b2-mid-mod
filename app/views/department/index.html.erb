<h1>Departments</h1>

<% @departments.each do |department| %>
  <div class="department" id="department-<%= department.id %>">
    <h2>NAME: <%= department.name %></h2>
    <p>FLOOR: <%= department.floor %></p>

    <% department.employees.each do |employee| %>
      <p>Employee: <%= employee.name %>, Level: <%= employee.level %></p>
    <% end %>
  </div>
<% end %>
